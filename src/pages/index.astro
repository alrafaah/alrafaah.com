---
const SITE_TITLE = "Al Rafaah International LLC";
const SITE_DESCRIPTION = "Your trusted e-commerce partner for quality products.";

// Mock product data (embedded in the file to avoid missing imports)
const products = [
  {
    id: 1,
    name: "Product 1",
    price: 29.99,
    image: "/images/product1.jpg",  // Ensure these images exist in your /public/images folder
    description: "A great product for all your needs."
  },
  {
    id: 2,
    name: "Product 2",
    price: 39.99,
    image: "/images/product2.jpg",  // Ensure these images exist in your /public/images folder
    description: "Another excellent choice for everyone."
  },
  {
    id: 3,
    name: "Product 3",
    price: 49.99,
    image: "/images/product3.jpg",  // Ensure these images exist in your /public/images folder
    description: "An affordable yet top-quality item."
  }
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={SITE_DESCRIPTION} />
    <title>{SITE_TITLE}</title>

    <!-- Favicon Links -->
    <link rel="icon" href="https://raw.githubusercontent.com/alrafaah/billowing-snow-fa70/refs/heads/main/public/favicon-16x16.png" type="image/png" sizes="16x16" />
    <link rel="icon" href="https://raw.githubusercontent.com/alrafaah/billowing-snow-fa70/refs/heads/main/public/favicon-32x32.png" type="image/png" sizes="32x32" />
    
    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" href="https://raw.githubusercontent.com/alrafaah/billowing-snow-fa70/refs/heads/main/public/apple-touch-icon.png" />

    <!-- Android Chrome Icons -->
    <link rel="icon" href="https://raw.githubusercontent.com/alrafaah/billowing-snow-fa70/refs/heads/main/public/android-chrome-192x192.png" sizes="192x192" />
    <link rel="icon" href="https://raw.githubusercontent.com/alrafaah/billowing-snow-fa70/refs/heads/main/public/android-chrome-512x512.png" sizes="512x512" />

    <!-- Additional Meta Tags (optional) -->
    <meta name="theme-color" content="#00bfae">
  </head>

  <body>
    <!-- Header Section -->
    <header>
      <img src="/alrafaah-international-llc-logo-01.png" alt="Al Rafaah International LLC Logo" />
      <nav>
        <a href="/">Home</a>
        <a href="#cart">Cart</a>
        <a href="#contact">Contact</a>
      </nav>
    </header>

    <!-- Main Content -->
    <main>
      <div class="hero-section">
        <h1>Welcome to Al Rafaah International LLC</h1>
        <p>Your trusted e-commerce partner for quality products.</p>
      </div>

      <!-- Product Section -->
      <section class="products">
        {products.map((product) => (
          <div class="product-card" key={product.id}>
            <img src={product.image} alt={product.name} class="product-image" />
            <h3>{product.name}</h3>
            <p>{product.description}</p>
            <span>${product.price}</span>
            <button class="add-to-cart" data-id={product.id}>Add to Cart</button>
          </div>
        ))}
      </section>
    </main>

    <!-- Footer Section -->
    <footer>
      <p>Â© 2025 Al Rafaah International LLC. All rights reserved.</p>
    </footer>

    <script>
      // Simple JavaScript for adding items to the cart
      const cart = [];

      document.querySelectorAll('.add-to-cart').forEach(button => {
        button.addEventListener('click', (e) => {
          const productId = e.target.getAttribute('data-id');
          const product = { ...{ products } }.find(p => p.id == productId);
          cart.push(product);
          alert(`${product.name} added to cart`);
        });
      });
    </script>
  </body>
</html>
