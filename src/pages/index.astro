---
const SITE_TITLE = "Al Rafaah International LLC";
const SITE_DESCRIPTION = "Your trusted e-commerce partner for quality products.";

// Mock product data (embedded in the file to avoid missing imports)
const products = [
  {
    id: 1,
    name: "Product 1",
    price: 29.99,
    image: "/images/product1.jpg",  // Ensure these images exist in your /public/images folder
    description: "A great product for all your needs."
  },
  {
    id: 2,
    name: "Product 2",
    price: 39.99,
    image: "/images/product2.jpg",  // Ensure these images exist in your /public/images folder
    description: "Another excellent choice for everyone."
  },
  {
    id: 3,
    name: "Product 3",
    price: 49.99,
    image: "/images/product3.jpg",  // Ensure these images exist in your /public/images folder
    description: "An affordable yet top-quality item."
  }
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={SITE_DESCRIPTION} />
    <title>{SITE_TITLE}</title>
    <link rel="icon" href="/favicon.ico" />
    <style>
      /* Reset some default styles */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Poppins', sans-serif;
        background-color: #f9f9f9;
        color: #333;
        line-height: 1.6;
      }

      header {
        background-color: #333;
        padding: 20px;
        color: white;
        text-align: center;
        position: sticky;
        top: 0;
        z-index: 10;
      }

      header nav a {
        color: white;
        font-size: 18px;
        margin: 0 20px;
        text-decoration: none;
        text-transform: uppercase;
        transition: color 0.3s ease;
      }

      header nav a:hover {
        color: #00bfae;
      }

      .hero-section {
        text-align: center;
        padding: 80px 20px;
        background: linear-gradient(135deg, #00bfae, #1c1c1c);
        color: white;
        border-radius: 8px;
      }

      .hero-section h1 {
        font-size: 3rem;
        margin-bottom: 10px;
      }

      .hero-section p {
        font-size: 1.2rem;
      }

      .products {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 30px;
        margin: 40px 20px;
      }

      .product-card {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-align: center;
        overflow: hidden;
      }

      .product-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
      }

      .product-image {
        width: 100%;
        height: auto;
        border-radius: 10px;
        margin-bottom: 15px;
      }

      .product-card h3 {
        font-size: 1.5rem;
        margin-bottom: 10px;
      }

      .product-card p {
        color: #777;
        font-size: 1rem;
        margin-bottom: 15px;
      }

      .product-card span {
        font-size: 1.2rem;
        font-weight: bold;
        color: #00bfae;
      }

      .add-to-cart {
        background-color: #00bfae;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s ease;
      }

      .add-to-cart:hover {
        background-color: #008f8b;
      }

      footer {
        background-color: #333;
        color: white;
        padding: 20px;
        text-align: center;
        position: relative;
        margin-top: 40px;
      }

      /* Media Queries for Responsiveness */
      @media screen and (max-width: 768px) {
        .hero-section {
          padding: 60px 20px;
        }

        .hero-section h1 {
          font-size: 2.5rem;
        }

        .product-card {
          padding: 15px;
        }

        .product-card h3 {
          font-size: 1.3rem;
        }

        .product-card p {
          font-size: 0.9rem;
        }

        .product-card span {
          font-size: 1rem;
        }
      }
    </style>
  </head>

  <body>
    <!-- Header Section -->
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="#cart">Cart</a>
        <a href="#contact">Contact</a>
      </nav>
    </header>

    <!-- Main Content -->
    <main>
      <div class="hero-section">
        <h1>Welcome to Al Rafaah International LLC</h1>
        <p>Your trusted e-commerce partner for quality products.</p>
      </div>

      <!-- Product Section -->
      <section class="products">
        {products.map((product) => (
          <div class="product-card" key={product.id}>
            <img src={product.image} alt={product.name} class="product-image" />
            <h3>{product.name}</h3>
            <p>{product.description}</p>
            <span>${product.price}</span>
            <button class="add-to-cart" data-id={product.id}>Add to Cart</button>
          </div>
        ))}
      </section>
    </main>

    <!-- Footer Section -->
    <footer>
      <p>Â© 2025 Al Rafaah International LLC. All rights reserved.</p>
    </footer>

    <script>
      // Simple JavaScript for adding items to the cart
      const cart = [];

      document.querySelectorAll('.add-to-cart').forEach(button => {
        button.addEventListener('click', (e) => {
          const productId = e.target.getAttribute('data-id');
          const product = { ...{ products } }.find(p => p.id == productId);
          cart.push(product);
          alert(`${product.name} added to cart`);
        });
      });
    </script>
  </body>
</html>
